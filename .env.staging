# Staging Environment Configuration
# Copy this to .env when deploying to staging

# Domain and base URL
PUBLIC_DOMAIN=honker
PUBLIC_URL_BASE=http://honker/purpletab

# Ollama Configuration
# Update this to your actual Ollama host
# Examples:
#   - Same host: http://172.17.0.1:11434 (Docker bridge)
#   - Tailscale: http://100.64.0.2:11434
#   - Separate server: http://ollama-server:11434
OLLAMA_URL=http://100.64.0.2:11434
OLLAMA_MODEL=gemma3:12b
USE_OLLAMA=true

# Disable mock data in staging
GENERATE_MOCK_DATA=false

# Enable scheduler in staging
ENABLE_SCHEDULER=true

# Staging-specific settings
LOG_LEVEL=debug
